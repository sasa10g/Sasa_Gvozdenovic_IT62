<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/conteiner"
    android:padding="5dp">

    <TextView
        android:id="@+id/textViewRecept"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000"
        android:layout_below="@+id/textViewNaziv"
        android:layout_alignLeft="@+id/textViewNaziv"
        android:layout_alignStart="@+id/textViewNaziv"
        android:layout_marginTop="11dp" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textViewNaziv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="TextView"
        android:textColor="#000"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_mljac"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>